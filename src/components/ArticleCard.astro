---
import { Image } from 'astro:assets'

const { post } = Astro.props
---

<article class="space-y-6 rounded border p-4 shadow-md md:p-6">
  <div class="relative">
    <Image
      src={post.data.hero_image}
      alt={post.data.hero_alt}
      class="aspect-video w-full rounded object-cover"
    />
    <div
      class="absolute bottom-0 left-0 h-1/3 w-full bg-gradient-to-t from-[#F5A898] to-transparent">
    </div>
  </div>
  <div class="flex flex-col space-y-4">
    <h2 class="text-xl font-semibold md:text-3xl">
      {post.data.title}
    </h2>
    <p class="flex-1">{post.data.description}</p>
    <p class="text-sm italic">
      {new Date(post.data.pubDate).toLocaleDateString()}
    </p>
  </div>
</article>
